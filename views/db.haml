%html
  %head
    %title SUPERMAN
    %script{:src => "jquery.js"}
    - if true
      %script{:src => "jquery-ui.min.js"}
    - else
      %script{:src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"}
    %script{:src => "jquery.form.js"}
    %script{:src => "jquery.masonry.js"}
    %script{:src => "jquery.dataTables.js"}
    %script{:src => "media/ZeroClipboard/ZeroClipboard.js"}
    %script{:src => "media/js/TableTools.js"}
    %script{:src => "run.js"}
    %link{:rel => 'stylesheet', :href => "jquery-ui.css"}
    %link{:rel => 'stylesheet', :href => "table.css"}
    %link{:rel => 'stylesheet', :href => "media/css/TableTools.css"}
    %link{:rel => 'stylesheet', :href => "base.css"}
  %body
    - if false
      %a.reload-all{:href => "#"} Reload All
    #colls
      - @colls.each do |coll|
        .collection{:id => coll.name, 'data-search-str' => coll.search_str, 'data-sort' => coll.sort_str, 'data-top' => get_position(coll)[:top], 'data-left' => get_position(coll)[:left]}
          = haml(:coll, :locals => {:coll => coll})
        %br
        %br
        %br
        %br
    - if false
      %iframe#content content